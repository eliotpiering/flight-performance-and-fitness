<div class="container">
  <%= render partial: "shared/admin_row" %>
  <table class="table table-responsive table-striped">
    <thead>
      <tr>
          <th>Name</th>
          <th>Edit</th>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.name %></td>
          <td><%= link_to "Edit", edit_author_path(author) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
