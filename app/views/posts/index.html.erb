<div class="container">
   <% @posts.each do |post| %>
     <%= render partial: 'post', locals: { post: post } %>
     <% if user_signed_in? %>
       <div class="row">
         <div class="col">
            <% if post.published %>
                <p class="alert alert-primary" role="alert">This post is published</p>
            <% else %>
                <p class="alert alert-danger" role="alert">This post is unpublished</p>
            <% end %>
            <p>
                <%= link_to "Edit Post", edit_post_path(post) %>
            </p>
         </div>
        </div>
      <% end %>
      <hr>
   <% end %>
   <% if user_signed_in? %>
        <div class="row m-2">
            <div class="col">
                <%= link_to "New Post", posts_path, method: :post, class:"btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
