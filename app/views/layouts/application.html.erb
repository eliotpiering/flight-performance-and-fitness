            &noscript=1"/>
          </noscript>
         <!-- End Facebook Pixel Code -->

        <title>Flight Performance and Fitness</title>

        <% if content_for?(:head) %>
            <%= yield(:head) %>
        <% end %>
    </head>

    <body>
        <section id="header" class="container-fluid white-font bg-dark"> <!-- Header -->
            <div class="row bg-primary text-right align-items-center pb-2 pt-2">
                <div class="offset-xs-6 col-xs-6 offset-sm-9 col-sm-3 social-icons">
                    <a href='https://www.yelp.com/biz/flight-performance-and-fitness-newton' target="_blank"> <%= fa_icon 'yelp' %></a>
                    <a href='https://www.facebook.com/flightperformance/' target="_blank"> <%= fa_icon 'facebook-official' %></a>
                    <a href='https://www.instagram.com/flight_performance/' target="_blank"> <%= fa_icon 'instagram' %></a>
                    <a class="flight-app-link" href='#' class="text-white" target="_blank"><%= fa_icon 'mobile' %></a>
                </div>
            </div>
            <nav class="container navbar navbar-toggleable-md navbar-expand-lg navbar-dark bg-dark">
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href= "<%= root_path %>" >
                    <img src="<%= image_path 'logo_blue.png' %>" alt="flight-performance-and-fitness" height="42"/>
                </a>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                    <a class="navbar-brand" href="#"></a>
                    <ul class="navbar-nav">
                        <%= nav_link "Home", root_path %>
                        <%#= nav_link "Blog", posts_path %>
                        <%= nav_link "Contact", contact_path  %>
                        <%= nav_link "Services", services_path %>
                        <%= nav_link "About", about_path %>
                        <%#= nav_link "Events", events_path %>
                        <%= nav_link "Schedule", calendar_path %>
                        <%= nav_link "Get Started", evaluation_path %>
                        <%= nav_link "Store", "https://teamlocker.squadlocker.com/#/lockers/flight-performance" %>
                        <% if user_signed_in? %>
                            <%= nav_link "Log Out", destroy_user_session_path, method: :delete, id: "user-logged-in" %>
                        <% end %>
                    </ul>
                </div>
            </nav>
        </section>
        <section id="main">
            <% if notice %>
                <div class="alert alert-primary alert-dismissible fade show" role="alert">
                    <%= notice %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% end %>
            <% if alert %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= alert %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% end %>
            <%= yield %>
        </section>
        <section class="container-fluid bg-dark"> <!-- Footer -->
            <div id="footer-image" class="row">
            </div>
            <div class="row">
                <div class="col text-center text-white lead">
                    <p class="mt-2 mb-2">
                        <!-- <a class="flight-app-link nounderline text-white" href="#" target="_blank"><span class="font-weight-bold"> Download our app &nbsp <%= fa_icon 'mobile' %></span></a><BR> -->
                        <p>
                          <%= link_to  "Privacy Policy", privacy_path%>
                        </p>

                        Â© 2017 FLIGHT PREFORMANCE & FITNESS
                        <br/>
                        225 Riverview Ave.
                        Newton, MA 02466 <br/>
                        201-988-9243
                    </p>
                </div>
            </div>
        </section>
        <section>
            <div id="sign-up-modal" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">
                            <h5 class="modal-title">Free Evaluation</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <sp aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body text-center">
                            <h3>We do things differently at Flight... </h3>
                            <br>
                            <p class="lead">To achieve the results you want, our coaches will create a specialized program tailored to you. In order to do this, we ask you come in for a free one on one evaluation. No obligations, just come in for a 1 hour workout and you can see what we are all about.</p>
                            <br>
                            <a href="<%= evaluation_path %>">
                                <button class="btn btn-primary">Sign up today for your free evaluation</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>
