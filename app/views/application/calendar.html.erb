<div class="container-fluid mt-5 mb-5" id="calendar-container">
    <div class="row mt-3 mb-3">
        <div class="col lead text-center">
            <h1>Schedule</h1>
            <!-- <h4>First class is free</h4> -->
        </div>
    </div>
    <div class="col-12">
        <%= calendar number_of_days: 6, events: @schedule do |date, events| %>
            <ul class="day-list">
                <% events.each do |event| %>
                    <li class="event-item <%= event.class_name %>" data-duration="<%= event.duration %>" data-toggle="tooltip" data-placement="top" title="<%= event.description %>" data-overlap="<%= event.overlap %>">
                            <b> <%= event.start_time.strftime("%l:%M") %> - <%= event.end_time.strftime("%l:%M%p") %> </b> <span class="event-description"><%= event.name %>
                        </li>
                <% end %>
            </ul>
        <% end %>
    </div>
</div>
