<div class="container mt-5 mb-5">
    <div class="row mt-5 mb-5">
        <div class="col text-center">
            <h1>Contact</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-xs-12">
            <img class="img-fluid" src="<%= asset_path("team-training.jpg")%>" />
        </div>
        <div class="col-md-4 col-xs-12">
            <div class="row">
                <div class="col">
                    <hr/> 
                    <!-- <h5>Phone </h5> -->
                    <p><i class="fa fa-phone"></i>  508-737-2165</p>
                    <!-- <h5>Email</h5> -->
                    <p><i class="fa fa-envelope"></i>  flightperformanceandfitness@gmail.com</p>
                    <!-- <h5>Location</h5> -->
                    <p><i class="fa fa-location-arrow"></i>  225 Riverview Ave. Newton, MA 02466</p>
                    <!-- <h5>Hours</h5> -->
                    <p><b>Monday-Friday</b></p>
                    <p>5:30 AM - 8:30 PM</p>
                    <p><b>Saturday</b></p>
                    <p>7:00 AM - 12:00 PM</p>
                    <hr/> 
                </div>
            </div>
            <div  id="contact-form-container">
                <div class="row text-center">
                    <div class="col text-center">
                        <h5>Send us a Message</h5>
                        <hr/> 
                    </div>
                </div>
                <%= form_for :contact, method: :post, remote: true do |f| %>
                    <div class="row">
                        <div class="col form-group">
                            <label for="name-input">Name</label>
                            <%= f.text_field :name, class: 'form-control', id: 'name-input', placeholder: 'Your Name', required: true %>
                        </div>
                        <div class="col form-group">
                            <label for="email-input">Email</label>
                            <%= f.email_field :email, class: 'form-control', id: 'email-input', placeholder: 'Your Email', required: true %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="message-input">Message</label>
                            <%= f.text_area :message, class: 'form-control', id: 'message-input', placeholder: 'Your Message', required: true, rows: 7, cols: 70 %>
                        </div>
                    </div>
                    <div class="row pt-4">
                        <div class="col">
                            <%= f.submit "Contact", class: 'btn btn-primary' %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

