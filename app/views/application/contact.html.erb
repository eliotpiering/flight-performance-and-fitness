<div class="container-fluid">
    <div class="row mt-5 mb-5">
        <div class="col text-center">
            <h1>Contact</h1>
        </div>
    </div>
    <div class="row" id="google-map">
        <!-- <div class="col"> -->
        <iframe
            height="100%"
            width="100%"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAwyOda8bwTONjidQwaqQ7d-3v8laA0d04&q=Flight+Perfomance+and+Fitness"
        ></iframe>
        <!-- </div> -->
    </div>
</div>
<div class="container mt-5 mb-5" id="contact-form-container">
    <%= form_for :contact, method: :post, remote: true do |f| %>
        <div class="row">
            <div class="col form-group">
                <label for="name-input">Name</label>
                <%= f.text_field :name, class: 'form-control', id: 'name-input', placeholder: 'Your Name', required: true %>
            </div>
            <div class="col form-group">
                <label for="email-input">Email</label>
                <%= f.text_field :email, class: 'form-control', id: 'email-input', placeholder: 'Your Email', required: true %>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="message-input">Message</label>
                <%= f.text_area :message, class: 'form-control', id: 'message-input', placeholder: 'Your Message', required: true, rows: 7, cols: 70 %>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col">
                <%= f.submit "Contact", class: 'btn btn-primary' %>
            </div>
        </div>
    <% end %>
</div>
