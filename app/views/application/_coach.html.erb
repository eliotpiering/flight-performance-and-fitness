<div class="col-md-6">
  <div class="card">
    <div class="card-header">
      <h4><%= coach.name %></h4>
    </div>
    <div class="card-body">
      <% if coach.headshot.attached? %>
        <%= image_tag coach.headshot.variant(resize_to_limit: [600, 600]), alt: coach.name, class: "card-img-top img-fluid" %>
      <% end %>
      <label class="font-weight-bold"><%= coach.position %></label>
      <p class="card-text">
        <%= coach.bio %>
      </p>
    </div>

    <% if with_edit_links %>
      <div class="card-footer text-muted">
        <%= link_to "Edit #{coach.name}", edit_coach_path(coach) %>
        <%= link_to "DELETE #{coach.name}", coach_path(coach), method: :delete, data: { confirm: "Are you sure your want to delete this record?" }, class: "text-danger"%>
      </div>
    <% end %>

  </div>
</div>
